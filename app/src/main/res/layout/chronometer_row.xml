<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color1_50" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <ImageButton
            android:id="@+id/startStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/stop"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/startStopButton"
            android:minWidth="50dp"
            android:textAlignment="textEnd"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/editText"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/chronometer"
            android:autofillHints="@string/new_project"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:text="@string/new_project"
            android:hint="@string/new_project"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:maxWidth="200dp" />

        <ImageButton
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/remove"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            app:tint="@color/color1_950" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color1_50" />

</LinearLayout>